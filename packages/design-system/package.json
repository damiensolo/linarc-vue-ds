{
  "name": "@linarc/design-system",
  "version": "0.1.0",
  "description": "Vue 3 Design System Component Library",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./style.css": "./dist/style.css"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "vite build --watch",
    "build": "vite build",
    "typecheck": "vue-tsc --noEmit",
    "lint": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts",
    "sync:figma": "tsx scripts/sync-figma-tokens.ts",
    "sync:figma:mcp": "tsx scripts/sync-figma-mcp.ts",
    "sync:figma:simple": "tsx scripts/sync-figma-simple.ts",
    "sync:figma:interactive": "tsx scripts/sync-figma-interactive.ts",
    "dev:sync-server": "tsx server/local-sync-server.ts",
    "dev:sync-server:clean": "powershell -ExecutionPolicy Bypass -File scripts/start-sync-server.ps1",
    "dev:webhook-server": "tsx server/webhook-handler.ts",
    "build:plugin": "cd figma-plugin && pnpm install && pnpm build"
  },
  "dependencies": {
    "@vueuse/core": "^10.9.0",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.0",
    "lucide-vue-next": "^0.344.0",
    "reka-ui": "^2.0.0",
    "tailwind-merge": "^2.2.1",
    "vue": "^3.4.15"
  },
  "devDependencies": {
    "@vitejs/plugin-vue": "^5.0.3",
    "autoprefixer": "^10.4.17",
    "postcss": "^8.4.33",
    "tailwindcss": "^3.4.1",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "vite": "^5.1.0",
    "vite-plugin-dts": "^3.7.0",
    "vue-tsc": "^1.8.27"
  },
  "peerDependencies": {
    "vue": "^3.4.0"
  }
}
