{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "allowImportingTsExtensions": true,
    "strict": true,
    "noEmit": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "baseUrl": ".",
    "paths": {
      "~/*": ["./*"],
      "@/*": ["./*"],
      "@linarc/design-system": ["../design-system/src"],
      "@linarc/design-system/*": ["../design-system/src/*"]
    },
    "types": [
      "@nuxt/types",
      "@pinia/nuxt",
      "@vueuse/core",
      "@vueuse/nuxt"
    ]
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "**/*.vue",
    ".nuxt/**/*"
  ],
  "exclude": [
    "node_modules",
    ".nuxt",
    ".output"
  ]
}

