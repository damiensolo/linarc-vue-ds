{
  "name": "linarc-vue-ds",
  "version": "0.1.0",
  "private": true,
  "description": "Vue Design System Monorepo with Nuxt Application",
  "scripts": {
    "dev": "pnpm --filter nuxt-app dev",
    "build": "pnpm --filter design-system build && pnpm --filter nuxt-app build",
    "build:ds": "pnpm --filter design-system build",
    "build:app": "pnpm --filter nuxt-app build",
    "build:pages": "pnpm build:ds && pnpm --filter nuxt-app generate",
    "preview": "pnpm --filter nuxt-app preview",
    "typecheck": "pnpm --recursive typecheck",
    "lint": "pnpm --recursive lint",
    "clean": "pnpm --recursive clean",
    "deploy:vercel": "vercel",
    "deploy:vercel:prod": "vercel --prod"
  },
  "devDependencies": {
    "@figma/plugin-typings": "^1.121.0",
    "@types/node": "^25.0.3",
    "shadcn-vue": "^2.4.3",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  }
}
